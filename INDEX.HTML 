<body>

<div class="card">
    <div id="questionArea">
        <div class="emoji-float">ðŸ’Œ</div>
        <h1>Hey Gorgeous!</h1>
        <p>Will you be my date for a special dinner this Friday?</p>
        
        <div class="btn-container">
            <button id="yesBtn" onclick="celebrate()">YES!</button>
            <button id="noBtn" onmouseover="moveNoButton()">No</button>
        </div>
    </div>

    <div id="success">
        <div class="emoji-float">ðŸ¥°</div>
        <h1 style="font-size: 32px;">It's a Date!</h1>
        <p>I can't wait to see you. <br> I'll pick you up at 7!</p>
    </div>
</div>

<script>
    // 1. Logic for the "Runaway" No Button
    function moveNoButton() {
        const btn = document.getElementById('noBtn');
        // Calculate safe boundaries
        const x = Math.random() * (window.innerWidth - btn.offsetWidth);
        const y = Math.random() * (window.innerHeight - btn.offsetHeight);
        
        btn.style.left = x + 'px';
        btn.style.top = y + 'px';
    }

    // 2. Logic for the Yes Celebration
    function celebrate() {
        // Hide the question, show the success message
        document.getElementById('questionArea').style.display = 'none';
        document.getElementById('success').style.display = 'block';
        document.body.style.backgroundColor = "#ffccd5";

        // 3. The Confetti Explosion!
        const duration = 5 * 1000;
        const animationEnd = Date.now() + duration;
        const defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 0 };

        function randomInRange(min, max) {
            return Math.random() * (max - min) + min;
        }

        const interval = setInterval(function() {
            const timeLeft = animationEnd - Date.now();

            if (timeLeft <= 0) {
                return clearInterval(interval);
            }

            const particleCount = 50 * (timeLeft / duration);
            
            // Create heart-shaped confetti
            confetti({
                ...defaults,
                particleCount,
                origin: { x: randomInRange(0.1, 0.3), y: Math.random() - 0.2 },
                colors: ['#ff4d6d', '#ffccd5', '#ff758f'],
                shapes: ['heart'] // Some browsers support heart shapes directly!
            });
            confetti({
                ...defaults,
                particleCount,
                origin: { x: randomInRange(0.7, 0.9), y: Math.random() - 0.2 },
                colors: ['#ff4d6d', '#ffccd5', '#ff758f'],
                shapes: ['heart']
            });
        }, 250);
    }
</script>

</body>
